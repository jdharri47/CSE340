<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <% messages() %>

    <form action="/account/register" method="post">
        <label for="first_name">First name</label>
        <input type="text" name="account_firstname" required>
        <label for="last_name">Last name</label>
        <input type="text" name="account_lastname" required>
        <label for="mail">Email</label>
        <input type="email" id="mail" name="account_email" placeholder="user@email.com" required></label>
        <label for="password">Password</label>
        <input type="text" name="account_password" required>
        <button type="submit">Register</button>
    </form>


    