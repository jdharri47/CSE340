<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    

    <form action="/account/register" method="post">
        <label for="first_name">First name</label>
        <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
        <label for="last_name">Last name</label>
        <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">
        <label for="mail">Email</label>
        <input type="email" name="account_email" placeholder="user@email.com" id="accountEmail" required value="<%= locals.account_email %>">

        <label for="password">Password</label>
        <div>The password must be at least 12 characters and have at least 1 uppercase, 1 number, and 1 special character</div> 
        <input type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <button type="submit">Register</button>
    </form>


    